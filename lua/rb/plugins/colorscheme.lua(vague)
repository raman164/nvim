return {
  "vague2k/vague.nvim",
  lazy = false,
  priority = 1000,
  config = function()
    require("vague").setup({
      transparent = true,
    })
    vim.cmd("colorscheme vague")
    vim.cmd(":hi statusline guibg=NONE")
    
    -- Additional transparency settings
    vim.api.nvim_set_hl(0, "Normal", { bg = "none" })
    vim.api.nvim_set_hl(0, "NormalFloat", { bg = "none" })
  end,
}
